---
import { Mail, CheckCircle, Clock, DollarSign } from '@lucide/astro';
import services from "../data/services.json";

type Service = {
    id: string;
    title: string;
    description: string;
    image: string;
    features: string[];
    tools: string[];
    deliverables: string[];
    pricing: string;
    turnaround: string;
};

const allServices = (services as Service[]);
---

<section id="services" class="carousel-item relative w-screen h-screen overflow-hidden">
    <!-- Background Image -->
    <div
        class="absolute inset-0 bg-fixed bg-center bg-cover bg-no-repeat"
        style="background-image: url('https://images.pexels.com/photos/3861969/pexels-photo-3861969.jpeg?auto=compress&cs=tinysrgb&w=1920');"
        aria-hidden="true"
    ></div>
    
    <!-- Dark overlay -->
    <div
        class="absolute inset-0 bg-black/50 backdrop-blur-sm"
        aria-hidden="true"
    ></div>

    <!-- Scrollable content container -->
    <div class="relative z-10 w-full h-full overflow-y-auto scroll-smooth">
        <div class="px-6 py-12 max-w-7xl mx-auto">
            
            <!-- Header -->
            <h1 class="text-white text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-center mb-3 pt-6">
                Services
            </h1>
            
            <!-- Introduction -->
            <div class="max-w-4xl mx-auto text-center mb-12">
                <p class="text-base sm:text-lg text-white/90 leading-relaxed font-light">
                    I offer specialized services in AI agent interfaces, frontend development, and design. Each service is tailored to deliver polished, user-friendly solutions that bridge the gap between complex AI systems and everyday users.
                </p>
            </div>

            <!-- Divider Line -->
            <div class="w-full h-px bg-white/30 mb-12"></div>

            <!-- Services Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto mb-12">
                {allServices.map(service => (
                    <div class="group bg-black/40 backdrop-blur-md rounded-xl border border-white/20 overflow-hidden hover:border-primary/50 transition-all hover:transform hover:scale-[1.02] hover:shadow-2xl">
                        <!-- Service Header with Image -->
                        <div class="relative h-48 overflow-hidden">
                            <img 
                                src={service.image} 
                                alt={service.title} 
                                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
                            <div class="absolute bottom-0 left-0 right-0 p-6">
                                <h2 class="text-2xl font-bold text-white mb-2">{service.title}</h2>
                                <p class="text-sm text-white/90">{service.description}</p>
                            </div>
                        </div>

                        <!-- Service Content -->
                        <div class="p-6 space-y-6">
                            <!-- Features -->
                            <div>
                                <h3 class="text-lg font-semibold text-accent mb-3 flex items-center gap-2">
                                    <CheckCircle size={20} />
                                    What You Get
                                </h3>
                                <ul class="space-y-2">
                                    {service.features.map(feature => (
                                        <li class="text-sm text-white/80 flex items-start gap-2">
                                            <span class="text-primary mt-1">â†’</span>
                                            <span>{feature}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <!-- Tools & Technologies -->
                            <div>
                                <h3 class="text-sm font-semibold text-white/70 mb-2">Tools & Technologies</h3>
                                <div class="flex flex-wrap gap-2">
                                    {service.tools.map(tool => (
                                        <span class="badge badge-outline badge-sm">{tool}</span>
                                    ))}
                                </div>
                            </div>

                            <!-- Deliverables -->
                            <div>
                                <h3 class="text-sm font-semibold text-white/70 mb-2">Deliverables</h3>
                                <div class="flex flex-wrap gap-2">
                                    {service.deliverables.map(item => (
                                        <span class="badge badge-ghost badge-sm">{item}</span>
                                    ))}
                                </div>
                            </div>

                            <!-- Pricing & Timeline -->
                            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-white/10">
                                <div class="flex items-center gap-2 text-sm">
                                    <DollarSign size={18} class="text-success" />
                                    <div>
                                        <div class="text-white/60 text-xs">Pricing</div>
                                        <div class="text-white font-semibold">{service.pricing}</div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2 text-sm">
                                    <Clock size={18} class="text-info" />
                                    <div>
                                        <div class="text-white/60 text-xs">Turnaround</div>
                                        <div class="text-white font-semibold">{service.turnaround}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>

            <!-- Call to Action -->
            <div class="max-w-4xl mx-auto mb-12">
                <div class="bg-gradient-to-r from-primary/20 via-secondary/20 to-accent/20 backdrop-blur-md rounded-xl border border-white/20 p-8 text-center">
                    <h2 class="text-3xl font-bold text-white mb-4">Ready to Get Started?</h2>
                    <p class="text-white/80 mb-6 max-w-2xl mx-auto">
                        Let's discuss your project and create something amazing together. I'm available for freelance work and consulting.
                    </p>
                    <div class="flex flex-wrap gap-4 justify-center">
                        <a 
                            href="mailto:srinivasvarma764@gmail.com" 
                            class="btn btn-primary gap-2"
                        >
                            <Mail size={20} />
                            Contact Me
                        </a>
                        <a 
                            href="#projects" 
                            class="btn btn-outline btn-accent gap-2"
                        >
                            View My Work
                        </a>
                    </div>
                </div>
            </div>

            <!-- Process Section -->
            <div class="max-w-4xl mx-auto mb-12">
                <h2 class="text-white text-3xl font-bold text-center mb-8">How I Work</h2>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-3">
                            <span class="text-2xl font-bold text-primary">1</span>
                        </div>
                        <h3 class="text-white font-semibold mb-2">Discovery</h3>
                        <p class="text-sm text-white/70">Understanding your needs and goals</p>
                    </div>
                    <div class="text-center">
                        <div class="w-16 h-16 bg-secondary/20 rounded-full flex items-center justify-center mx-auto mb-3">
                            <span class="text-2xl font-bold text-secondary">2</span>
                        </div>
                        <h3 class="text-white font-semibold mb-2">Design</h3>
                        <p class="text-sm text-white/70">Creating mockups and prototypes</p>
                    </div>
                    <div class="text-center">
                        <div class="w-16 h-16 bg-accent/20 rounded-full flex items-center justify-center mx-auto mb-3">
                            <span class="text-2xl font-bold text-accent">3</span>
                        </div>
                        <h3 class="text-white font-semibold mb-2">Development</h3>
                        <p class="text-sm text-white/70">Building with clean, maintainable code</p>
                    </div>
                    <div class="text-center">
                        <div class="w-16 h-16 bg-info/20 rounded-full flex items-center justify-center mx-auto mb-3">
                            <span class="text-2xl font-bold text-info">4</span>
                        </div>
                        <h3 class="text-white font-semibold mb-2">Delivery</h3>
                        <p class="text-sm text-white/70">Deployment and documentation</p>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="max-w-4xl mx-auto mb-12">
                <h2 class="text-white text-3xl font-bold text-center mb-8">Frequently Asked Questions</h2>
                <div class="space-y-4">
                    <div class="collapse collapse-arrow bg-black/40 backdrop-blur-md border border-white/10">
                        <input type="radio" name="faq-accordion" checked />
                        <div class="collapse-title text-lg font-medium text-white">
                            Do you work on backend development?
                        </div>
                        <div class="collapse-content text-white/80">
                            <p>No, I specialize in frontend development and UI/UX design. I focus on creating polished interfaces and user experiences for AI products and web applications.</p>
                        </div>
                    </div>
                    <div class="collapse collapse-arrow bg-black/40 backdrop-blur-md border border-white/10">
                        <input type="radio" name="faq-accordion" />
                        <div class="collapse-title text-lg font-medium text-white">
                            What's your typical project timeline?
                        </div>
                        <div class="collapse-content text-white/80">
                            <p>Timelines vary by project scope. Simple UI designs take 1-2 weeks, while complex AI agent interfaces may take 3-5 weeks. I provide detailed timelines during the discovery phase.</p>
                        </div>
                    </div>
                    <div class="collapse collapse-arrow bg-black/40 backdrop-blur-md border border-white/10">
                        <input type="radio" name="faq-accordion" />
                        <div class="collapse-title text-lg font-medium text-white">
                            Do you offer ongoing support?
                        </div>
                        <div class="collapse-content text-white/80">
                            <p>Yes! I provide documentation and can offer maintenance packages for ongoing updates, bug fixes, and feature additions after project delivery.</p>
                        </div>
                    </div>
                    <div class="collapse collapse-arrow bg-black/40 backdrop-blur-md border border-white/10">
                        <input type="radio" name="faq-accordion" />
                        <div class="collapse-title text-lg font-medium text-white">
                            Can you integrate with existing systems?
                        </div>
                        <div class="collapse-content text-white/80">
                            <p>Absolutely. I specialize in creating frontend interfaces that integrate with existing APIs, AI models, and automation systems. I work with your tech stack.</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>